### Переменные

set $mod Mod4
set $WOBSOCK $XDG_RUNTIME_DIR/wob.sock
set $term alacritty --class=alacritty-floating
set $menu wofi --allow-images --insensitive true --show drun -a
set $opacity 0.95

### Правила окон

for_window [class="jetbrains-(.*)" title="splash"] floating enable
for_window [app_id="python3"] floating enable
for_window [title="Choose ONE of the audio conference options"] floating enable
for_window [title="Открыть файл"] floating enable
for_window [title="Открыть папку"] floating enable
for_window [title="Firefox — индикатор доступа"] floating enable
for_window [app_id="alacritty-floating"] floating enable

### Настройка мониторов

# Управление обоями
exec ~/.azotebg 

output eDP-1 position 0 0
output eDP-1 scale 1.5
output HDMI-A-1 resolution 1920x1080@72Hz position 1280 0

### Настройка энергосбережения

exec swayidle -w \
	    timeout 270 'notify-send Энергосбережение "скоро засну"' \
        timeout 299 'swaylock -f -i /usr/share/backgrounds/archlinux/geolanes.png' \
        timeout 300 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
        before-sleep 'swaylock -f -i /usr/share/backgrounds/archlinux/geolanes.png' \
        timeout 301 "/home/uroborosq/Рабочий\ стол/Скрипты/bin/check-playerctl-suspend"

### Настройки устройств ввода

# Тачпад

  input "1739:52560:SYNA32AC:00_06CB:CD50_Touchpad" {
      dwt enabled
      tap enabled
      natural_scroll enabled
      middle_emulation enabled
      scroll_factor 0.3
  }

# Клавиатура

  input type:keyboard {
  xkb_layout us,ru
  xkb_options grp:win_space_toggle
  xkb_numlock enable
}

### Комбинации клавиш

bindcode $mod+40 exec $menu

# Start a terminal
bindsym $mod+Return exec $term

# Kill focused window
bindcode Mod1+24 kill

floating_modifier $mod normal

bindsym $mod+Shift+c reload
bindsym $mod+l exec swaylock -f -i /usr/share/backgrounds/archlinux/geolanes-blurry.png

# Exit sway (logs you out of your Wayland session)
bindsym $mod+Shift+e exec nwg-bar
#
# Moving around:
#
# Move your focus around
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Ditto, with arrow keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
#
# Workspaces:
#
# Switch to workspace
bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace number 10
# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10
# Note: workspaces can have any name you want, not just numbers.
# We just use 1-10 as the default.
#
# Layout stuff:
#

bindsym $mod+b splith
bindsym $mod+v splitv

# Switch the current container between different layout styles
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# Make the current focus fullscreen

bindsym $mod+f fullscreen

# Toggle the current focus between tiling and floating mode
bindsym $mod+x floating toggle

# Swap focus between the tiling area and the floating area
bindsym $mod+c focus mode_toggle

# Move focus to the parent container
bindsym $mod+a focus parent

bindsym Mod1+tab workspace next_on_output 
bindsym Mod1+Shift+tab workspace prev_on_output 
#
# Scratchpad:
#

bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

#
# Resizing containers:
#
mode "resize" {

    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Быстрое управление мониторами

bindsym $mod+p exec "swaymsg output eDP-1 disable; swaymsg output HDMI-A-1 resolution 1920x1080@72Hz position 0 0"
bindsym $mod+Shift+p exec "swaymsg output eDP-1 position 0 0 scale 1.5 enable; swaymsg output HDMI-A-1 resolution 1920x1080@72Hz position 1280 0"
bindsym Alt+Shift+p exec "swaymsg output \* enable"

### Звук

# Pipewire
#bindsym XF86AudioRaiseVolume exec "pw-volume change +2.5%"
#bindsym XF86AudioLowerVolume exec "pw-volume change -2.5%"
#bindsym XF86AudioMute exec "pw-volume mute toggle"

# PulseAudio + wob

bindsym XF86AudioRaiseVolume exec pamixer -ui 5 && pamixer --get-volume > $WOBSOCK
bindsym XF86AudioLowerVolume exec pamixer -ud 5 && pamixer --get-volume > $WOBSOCK
bindsym XF86AudioMute exec pamixer --toggle-mute && ( [ "$(pamixer --get-mute)" = "true" ] && echo 0 > $WOBSOCK ) || pamixer --get-volume > $WOBSOCK

# Alsa + wob

# bindsym XF86AudioRaiseVolume exec amixer sset Master 5%+ | sed -En 's/.*\[([0-9]+)%\].*/\1/p' | head -1 > $WOBSOCK
# bindsym XF86AudioLowerVolume exec amixer sset Master 5%- | sed -En 's/.*\[([0-9]+)%\].*/\1/p' | head -1 > $WOBSOCK
# bindsym XF86AudioMute exec amixer set Master toggle | sed -En '/\[on\]/ s/.*\[([0-9]+)%\].*/\1/ p; /\[off\]/ s/.*/0/p' | head -1 > $WOBSOCK


# Скриншоты

bindsym Print exec slurp | grim -g - - | wl-copy && wl-paste > $HOME/Изображения/Снимки\ экрана/$(date +'%Y-%m-%d-%H%M%SС.png') # Скриншот области

# Яркость

bindsym XF86MonBrightnessUp exec light -A 5 && light -G | cut -d'.' -f1 > $WOBSOCK
bindsym XF86MonBrightnessDown exec light -U 5 && light -G | cut -d'.' -f1 > $WOBSOCK

# Управление мультимедиа

bindsym --no-warn XF86AudioPlay exec playerctl play-pause
bindsym --no-warn XF86AudioNext exec playerctl next
bindsym --no-warn XF86AudioPrev exec playerctl previous

### Внешний вид

font pango:Noto Sans 10

set $bg #171717
set $fg #eff1f5
set $br #353535
set $ia #232425


# class                 border  backgr. text    indicator child_border
client.focused          $br     $br     $fg     $bg       $br
client.focused_inactive $bg     $bg     $fg     $bg       $bg
client.unfocused        $bg     $bg     $fg     $bg       $bg


### Автостарт

set $WOBSOCK $XDG_RUNTIME_DIR/wob.sock

exec_always {
    gsettings set org.gnome.desktop.interface gtk-theme 'adw-gtk3-dark'  
    gsettings set org.gnome.desktop.interface icon-theme 'Papirus-Dark'
}

exec systemctl --user import-environment DISPLAY WAYLAND_DISPLAY SWAYSOCK
exec rm -f $WOBSOCK && mkfifo $WOBSOCK && tail -f $WOBSOCK | wob --anchor bottom --height 25 --width 300 --border-color "#353535FF" --background-color "#353535FF" --bar-color "#FFFFFFFF" --padding 2 --border 0 --margin 40
exec wmname LG3DС
exec dex -a --environment sway
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id /usr/lib/pam_kwallet_init
exec /home/uroborosq/Рабочий\ стол/Linux-related/bin/exec-waybar
include /etc/sway/config.d/*
exec_always "killall waybar"

