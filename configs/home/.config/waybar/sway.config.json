[
  {
    "layer": "top",
    "modules-left": [
      "systemd-failed-units",
      "sway/workspaces",
      "custom/cpu",
      "custom/cpu-freq",
      "custom/ram",
      "custom/temp",
      "custom/net"
    ],
    "modules-center": [
      "custom/clock"
    ],
    "modules-right": [
      "cava",
      "custom/playerctl",
      "tray",
      "sway/language",
      "pulseaudio",
      "idle_inhibitor",
      "network",
      "power-profiles-daemon",
      "battery"
    ],
    "sway/window": {
      "max-length": 50
    },
    "systemd-failed-units": {
      "hide-on-ok": false,
      "format": "✗ {nr_failed}",
      "format-ok": "✓",
      "system": true,
      "user": true
    },
    "cava": {
      "framerate": 60,
      "autosens": 1,
      "sensitivity": 100,
      "bars": 14,
      "lower_cutoff_freq": 50,
      "higher_cutoff_freq": 10000,
      "hide_on_silence": false,
      "method": "pulse",
      "source": "auto",
      "stereo": true,
      "reverse": false,
      "bar_delimiter": 0,
      "monstercat": false,
      "waves": false,
      "noise_reduction": 0.77,
      "input_delay": 2,
      "format-icons": [
        "▁",
        "▂",
        "▃",
        "▄",
        "▅",
        "▆",
        "▇",
        "█"
      ],
      "actions": {
        "on-click-right": "mode"
      }
    },
    "wireplumber": {
      "format": "{volume}% {icon} {format_source}",
      "format-muted": " {format_source}",
      "format-source": "{source_volume}% ",
      "format-source-muted": " ",
      "format-icons": {
        "default": [
          "",
          ""
        ]
      },
      "on-click": "helvum"
    },
    "power-profiles-daemon": {
      "format": "{icon} ",
      "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
      "tooltip": true,
      "format-icons": {
        "default": "",
        "performance": "",
        "balanced": "",
        "power-saver": ""
      }
    },
    "custom/close": {
      "format": "kill",
      "on-click": "swaymsg kill"
    },
    "tray": {
      "icon-size": 21,
      "spacing": 10
    },
    "battery": {
      "interval": 3,
      "format": "{capacity}% {icon}  {power:0.1f} W",
      "format-icons": [
        "",
        "",
        "",
        "",
        ""
      ]
    },
    "hyprland/workspaces": {
      "all-outputs": true,
      "persistent_workspaces": {
        "1": [
          "*"
        ],
        "2": "*",
        "3": "*",
        "4": "*",
        "5": "*"
      }
    },
    "custom/playerctl": {
      "format": "{}",
      "interval": 2,
      "exec": "/usr/bin/uq-current-song",
      "max-length": 10000
    },
    "cpu": {
      "interval": 2,
      "format": "ЦП: {usage}%  {max_frequency} GHz",
      "on-click": "kitty --class=terminal-floating htop"
    },
    "custom/cpu": {
      "format": "{}",
      "interval": 1,
      "exec": "/usr/bin/uq-cpu-usage-once",
      "on-click": "kitty --class=terminal-floating htop"
    },
    "custom/ram": {
      "format": "{}",
      "interval": 3,
      "exec": "/usr/bin/uq-ram"
    },
    "custom/cpu-freq": {
      "format": "{}",
      "interval": 1,
      "exec": "/usr/bin/uq-cpu-frequency"
    },
    "custom/net": {
      "format": "{}",
      "interval": 1,
      "exec": "/usr/bin/uq-net"
    },
    "memory": {
      "interval": 5,
      "format": "ОП: {used:0.1f} GiB, swap: {swapUsed:0.1f} GiB",
      "max-length": 100
    },
    "custom/clock": {
      "exec": "date '+%H:%M %d %b %a'",
      "format": "{}",
      "interval": 1,
      "on-click": "kitty --class=terminal-floating calcurse"
    },
    "pulseaudio": {
      "format": "{volume}% {icon}",
      "format-bluetooth": "{volume}% {icon}",
      "format-muted": "",
      "format-icons": {
        "alsa_output.pci-0000_00_1f.3.analog-stereo": "",
        "headphones": "",
        "handsfree": "",
        "headset": "",
        "phone": "",
        "portable": "",
        "car": "",
        "default": [
          "",
          ""
        ]
      },
      "scroll-step": 1,
      "on-click": "kitty --class=terminal-floating ncpamixer -t o"
    },
    "sway/language": {
      "format": "{}",
      "min-length": 3
    },
    "custom/temp": {
      "format": " {}",
      "interval": 2,
      "exec": "/usr/bin/uq-thinkpad-e14-gen-temperature",
      "min-length": 10
    },
    "network": {
      "interval": 2,
      "format": "{ifname} ",
      "format-wifi": "",
      "format-ethernet": "",
      "format-disconnected": "",
      "tooltip-format": "{ifname}",
      "tooltip-format-wifi": "{essid} ({signalStrength}%) ",
      "tooltip-format-ethernet": "{ifname} ",
      "tooltip-format-disconnected": "Disconnected",
      "max-length": 50,
      "min-length": 2,
      "on-click": "kitty --class=terminal-floating nmtui-connect"
    },
    "idle_inhibitor": {
      "format": "{icon} ",
      "format-icons": {
        "activated": "",
        "deactivated": ""
      }
    }
  }
]
